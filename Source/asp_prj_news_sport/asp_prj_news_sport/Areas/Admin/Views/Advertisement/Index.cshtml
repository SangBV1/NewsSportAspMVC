@model PagedList.IPagedList<Model.EF.advertisement>
@using PagedList.Mvc;
@using CommonPublic;
@{
    ViewBag.Title = "Quảng cáo trên Website";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="/assets/admin/js/controller/AdvertisementController.js"></script>
}
<div class="agile-tables">
    <div class="w3l-table-info">
        <h3>Quảng cáo trên Website</h3>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-12">
                    <a class="btn btn-primary delete_all" href="#"><i class='fa fa-trash' aria-hidden='true'></i></a>
                    <a class="btn btn-primary" href="/Admin/Advertisement/Create">Thêm mới</a>
                </div>
            </div>
        </div>
        <table id="table" class="">
            <thead>
                <tr>
                    <th><input type="checkbox" id="chk_all"> All</th>
                    <th>Hình Ảnh</th>
                    <th>Kích cỡ</th>
                    <th>Mô Tả</th>
                    <th>Ưu tiên</th>
                    <th>Click</th>
                    <th>Trạng thái</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.id">
                        <td><input type="checkbox" class="sub_chk" data-id="@item.id"></td>
                        <td class="col-md-2" style="width:300px;"><img src="@item.url_image" class="img-responsive" /></td>
                        <td>@item.advertisement_position_id</td>
                        <td>@item.description_ad</td>
                        <td>@item.display_order</td>
                        <td>@item.click_count</td>
                        <td><a href="#" class="btn-active" data-id="@item.id">@Html.Raw(item.is_active ? "<strong>YES</strong>" : "NO")</a></td>
                        <td>
                            <a href="/Admin/Advertisement/Edit/@item.id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            |
                            <a href="#" class="remove_row" data-id="@item.id"><i class='fa fa-trash' aria-hidden='true'></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>





